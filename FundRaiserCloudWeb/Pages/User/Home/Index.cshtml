@page
@model FundRaiserCloudWeb.Pages.User.Home.IndexModel

<div class="row container pb-3 backgroundWhite">
    @foreach(var category in Model.CategoryList){
    <h2 class="text-success pl-1"><b>@category.Name</b></h2>
    <div class="col-12">
        <div class="row my-3">
            @foreach(var project in Model.ProjectList.Where(u=>u.CategoryId==category.Id)){

            <div class="col-lg-4 col-md-6 pb-4 filter">
                <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                    <div class="card-body pb-1 row">
                                <div class="col-8 h5">@project.Title</div>
                                <div class="col-4 text-end"><span class="text-info h4">@project.ProjectGoal€</span></div>
                    </div>
                    <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@project.Image" alt="menuitem image">
                    <div class="card-body p-1 px-3 row">
                        <div class="col-6">
                            <span class="badge p-2 border w-100 text-dark bg-warning ">@project.Category.Name</span>
                        </div>
                        <div class="col-6 border-0">
                            <span class="badge p-2 border w-100 bg-info ">Progress</span>
                        </div>
                        <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                            <p> @Html.Raw(project.Description)</p>
                        </div>
                        <div class="col-12 p-1">
                            <a asp-page="ProjectPage" asp-route-id="@project.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                        </div>
                    </div>
                </div>
            </div>


            }
        </div>
    </div>
    }
</div>
