@page
@model FundRaiserCloudWeb.Pages.Admin.Benefits.IndexModel

@*<partial name="_Notification" />*@ @*Moved to _Layout for been shown across all pages*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Benefit List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Benefit
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Benefit Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Benefit Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Benefits)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.Description
                    </td>
                    <td width="15%">
                        @obj.Price
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>


